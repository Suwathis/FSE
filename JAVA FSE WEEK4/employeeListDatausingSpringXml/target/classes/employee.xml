<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="employee1" class="com.example.employee.Employee">
        <property name="id" value="1"/>
        <property name="name" value="John Doe"/>
        <property name="department" value="HR"/>
        <property name="salary" value="50000"/>
    </bean>

    <bean id="employee2" class="com.example.employee.Employee">
        <property name="id" value="2"/>
        <property name="name" value="Jane Smith"/>
        <property name="department" value="IT"/>
        <property name="salary" value="60000"/>
    </bean>

    <bean id="employee3" class="com.example.employee.Employee">
        <property name="id" value="3"/>
        <property name="name" value="Michael Clark"/>
        <property name="department" value="Finance"/>
        <property name="salary" value="58000"/>
    </bean>

    <bean id="employee4" class="com.example.employee.Employee">
        <property name="id" value="4"/>
        <property name="name" value="Emily Johnson"/>
        <property name="department" value="Marketing"/>
        <property name="salary" value="62000"/>
    </bean>

    <bean id="employee5" class="com.example.employee.Employee">
        <property name="id" value="5"/>
        <property name="name" value="David Wilson"/>
        <property name="department" value="IT"/>
        <property name="salary" value="61000"/>
    </bean>

    <bean id="employee6" class="com.example.employee.Employee">
        <property name="id" value="6"/>
        <property name="name" value="Sophia Martinez"/>
        <property name="department" value="Finance"/>
        <property name="salary" value="59000"/>
    </bean>

    <bean id="employeeList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="employee1"/>
                <ref bean="employee2"/>
                <ref bean="employee3"/>
                <ref bean="employee4"/>
                <ref bean="employee5"/>
                <ref bean="employee6"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
